<div id="tsparticles" class="hero-background"></div>

<script>
    import { tsParticles } from "@tsparticles/engine";
    import {loadAll} from '@tsparticles/all';

    loadAll(tsParticles);

    tsParticles.load({
        id:"tsparticles",
        options: [
        {
            background: {
                color: "transparent"
            },
            fullScreen: {
                enable: false,
                zIndex: -1
            },
            particles: {
                number: {
                    value: 200
                },
                opacity: {
                    value: {
                        min: 0.1,
                        max: 1
                    },
                    animation : {
                        enable: true,
                        speed: 0.2,
                        startValue: "random",
                        mode: "auto"
                    }
                },
                size: {
                    value: {
                        min: 1,
                        max: 4
                    }
                },
                move: {
                    enable: true,
                    distance: 2,
                    speed: 0.05
                }
            }
        }
        ]
    }).then(container => {
        console.log("callback - tsparticles config loaded");
    })
    .catch(error => {
        console.error(error);
    });
</script>


